<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:paddingTop="0dp">

    <include layout="@layout/view_toolbar" />
    <org.kteam.palm.common.view.ElasticScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_query_yl_gtjfjl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">
                <org.kteam.palm.common.view.RoundImageView
                    android:id="@+id/iv_query_yl_gtjfjl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:imageType="corner_image"
                    app:borderColor="@color/fbutton_color_concrete"
                    android:src="@mipmap/query_yl_gtjfjl"
                    android:scaleType="centerCrop"
                    app:border="0.1dp"
                    app:cornerRadius="5dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_query_yl_lnjfjl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">
                <org.kteam.palm.common.view.RoundImageView
                    android:id="@+id/iv_query_yl_lnjfjl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:imageType="corner_image"
                    app:borderColor="@color/fbutton_color_concrete"
                    android:src="@mipmap/query_yl_lnjfjl"
                    android:scaleType="centerCrop"
                    app:border="0.1dp"
                    app:cornerRadius="5dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_query_yl_zhszmx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">
                <org.kteam.palm.common.view.RoundImageView
                    android:id="@+id/iv_query_yl_zhszmx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:imageType="corner_image"
                    app:borderColor="@color/fbutton_color_concrete"
                    android:src="@mipmap/query_yl_zhszmx"
                    android:scaleType="centerCrop"
                    app:border="0.1dp"
                    app:cornerRadius="5dp" />
            </RelativeLayout>
        </LinearLayout>
    </org.kteam.palm.common.view.ElasticScrollView>
</LinearLayout>